{% extends 'layout.html.twig' %}

{% block content %}
     <div class="wrapper allAdvert">

        <h1>Les Helps :</h1>

        {% include 'Advert/_formFilters.html.twig' %}

            {% for key in advert %}
                {% if session.user.id != key.user_id %}
                    
                    <div>
                        <h2><a href="/Advert/show/{{ key.id }}"> {{ key.title }} -- </a><span>{{ key.category_id }}</span></h2>
                        
                        {% for ref in user %}{% if ref.id == key.user_id %} <p>{{ ref.lastName }} {{ ref.firstName }}</p> {% endif %} {% endfor %}
                        
                        <p> {{key.description}} </p>

                    </div>
                {% endif %}
            {% else %}
                <p>Aucune annonce disponible !</p>
            {% endfor %}
    </div>

{% endblock %}