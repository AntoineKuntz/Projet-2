{% extends 'layout.html.twig' %}

{% block content %}
   
    <div class="wrapper helpers">
        
        <h1>Nos Helpers</h1>

        <div class="allUsers">
            {% for key in user %}
            
                {% if key.id != session.user.id %}
                    
                        <article class="profilCard">
                            
                            <div class="header">
                                <div class="avatarContainer">
                                    <img class="usersAvatar" src="/assets/images/membres/avatars/{{key.avatar}}">
                                </div>
                               <h4>{{ key.lastName }} {{ key.firstName }}</h4> 
                            </div>
                            
                            <div class="body">     
                                <div class="adress">
                                    <p class="fontLight"> {{ key.adresseNumber}} {{key.adresseStreet}} <br> {{ key.adressePostal}} {{key.adresseCity}} </p>
                                </div>
                                
                                <p class="rang"> Rang : {{ key.rang }} </p>
                            </div>
                            
                            <div class="footer">
                                <a href="userShow/{{ key.id }}" class="btn">Profil</a>
                                {% if session.user.status == '1' %}
                                    <div class="adminBtnContainer">
                                        <a href="/user/edit/{{ key.id }}">Edit</a>
                                        <form class="delete" action="/user/delete/{{key.id}}" method="POST">
                                            <button class="btnDelete">Delete</button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                        </article>
                    
                {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}